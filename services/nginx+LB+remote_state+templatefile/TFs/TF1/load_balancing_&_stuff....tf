resource "aws_lb_listener" "listener00" {
  load_balancer_arn = aws_lb.lb00.arn
  port              = "443"
  protocol          = "HTTPS"
  ssl_policy        = "ELBSecurityPolicy-2016-08"
  certificate_arn   = aws_lb_listener_certificate.lb_certificate00.arn

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.lb_target_group00.arn
  }

}

