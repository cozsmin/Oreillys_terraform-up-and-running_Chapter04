## LB resources

resource "aws_lb" "lb00" {
  name               = "lb00"
  internal           = false
  load_balancer_type = "application"
  security_groups    = [ aws_security_group.sg00.id ]
  subnets            = [ aws_subnet.privsubnet00a.id, aws_subnet.privsubnet00b.id, aws_subnet.privsubnet00c.id ]

#  access_logs {
#    bucket  = aws_s3_bucket.lb_logs.id
#    prefix  = "lb00"
#    enabled = true
#  }
}

resource "aws_lb_target_group" "lb_target_group00" {
  name     = "lb-target-group00"
  port     = 80
  protocol = "HTTP"
  vpc_id   = aws_vpc.vpc00.id

#  target_type = "ip/instance/lambda/alb"

  target_group_health {
    dns_failover {
      minimum_healthy_targets_count      = 1
      minimum_healthy_targets_percentage = "off"
    }

    unhealthy_state_routing {
      minimum_healthy_targets_count      = 1
      minimum_healthy_targets_percentage = "off"
    }
  }
}

