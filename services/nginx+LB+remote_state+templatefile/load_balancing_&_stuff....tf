resource "aws_lb_target_group" "lb_target_group00" {
  name     = var.lb_target_group00_name
  port     = var.http_port
  protocol = "HTTP"
  vpc_id   = var.vpc_id

#  target_type = "ip/instance/lambda/alb"

  target_group_health {
    dns_failover {
      minimum_healthy_targets_count      = 1
      minimum_healthy_targets_percentage = "off"
    }

    unhealthy_state_routing {
      minimum_healthy_targets_count      = 1
      minimum_healthy_targets_percentage = "off"
    }
  }

  health_check {
    path                = "/"
    protocol            = "HTTP"
    matcher             = "200"
    interval            = 15
    timeout             = 3
    healthy_threshold   = 2
    unhealthy_threshold = 2
  }

}



