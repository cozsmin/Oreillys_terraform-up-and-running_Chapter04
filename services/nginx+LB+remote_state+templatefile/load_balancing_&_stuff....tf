resource "aws_lb_listener" "listener00" {
  load_balancer_arn = aws_lb.lb00.arn
  port              = var.https_port
  protocol          = "HTTPS"
  ssl_policy        = "ELBSecurityPolicy-2016-08"

  # https://chatgpt.com/c/69500858-a28c-832d-9431-04f827395d02
#  certificate_arn   = aws_lb_listener_certificate.lb_certificate00.arn
  certificate_arn = aws_acm_certificate.acm_certificate00.arn


  default_action {
    type             = "fixed-response"

    fixed_response {
      content_type = "text/plain"
      message_body = "404: page not found. Please try www.acucaraccia.com <br>\n"
      status_code  = 404
    }

  }

#    target_group_arn = aws_lb_target_group.lb_target_group00.arn
}


resource "aws_lb_listener_rule" "acucaraccia_pattern" {
  listener_arn = aws_lb_listener.listener00.arn
  priority     = 100

  action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.lb_target_group00.arn
  }

  condition {
    path_pattern {
      values = [ "/acucaraccia/", "/acucaraccia" ]
    }
  }
}

resource "aws_lb_listener_rule" "acucaraccia_host" {
  listener_arn = aws_lb_listener.listener00.arn
  priority     = 101

  action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.lb_target_group00.arn
  }

  condition {
    host_header {
      values = [ "www.acucaraccia.com" , "acucaraccia.com" ]
    }
  }
}
